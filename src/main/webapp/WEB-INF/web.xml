<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>02MVC2</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- FrontController Mapping -->
  <servlet>
  	<servlet-name>FC</servlet-name>
  	<servlet-class>com.test.controller.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>FC</servlet-name>
  	<url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
  
  <!-- DataSource Setting -->
    <resource-ref>
    	<res-ref-name>jdbc/mysql</res-ref-name>
    	<res-type>javax.sql.DataSource</res-type>
    	<res-auth>Container</res-auth>
  	</resource-ref>
  	
  	
  	<!--ForwardLogin Filter -->
  	<filter>
  		<filter-name>ForwardLogin</filter-name>
  		<filter-class>com.test.filter.forwardloginpageFilter</filter-class>
  	</filter>
  	<filter-mapping>
  		<filter-name>ForwardLogin</filter-name>
  		<url-pattern>/*</url-pattern>
  	</filter-mapping>
  	
  	<!-- Permission Filter -->
   	<filter>
  		<filter-name>PermissionFilter</filter-name>
  		<filter-class>com.test.filter.permissionFilter</filter-class>
  	</filter>
  	<filter-mapping>
  		<filter-name>PermissionFilter</filter-name>
  		<url-pattern>/board/*</url-pattern>
  		<url-pattern>/notice/*</url-pattern>
  	</filter-mapping>	
  	
  
</web-app>


